<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="end|center"
        android:textSize="38sp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="@id/numpad"
        app:layout_constraintRight_toRightOf="@id/numpad"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#4000FFFF"
        />


    <GridLayout
        android:id="@+id/numpad"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/screen"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:columnCount="4"
        android:rowCount="5"
        android:orientation="horizontal">


        <Button android:text="/"
            android:id="@+id/division"
            android:layout_column="3"
            />
        <Button
            android:text="*"
            android:id="@+id/multiplication"
            />
        <Button
            android:text="1"
            android:id="@+id/button-1"
            />
        <Button
            android:text="2"
            android:id="@+id/button-2"
            />
        <Button
            android:text="3"
            android:id="@+id/button-3"
            />
        <Button
            android:text="+"
            android:id="@+id/addition"
            />
        <Button
            android:text="4"
            android:id="@+id/button-4"
            />
        <Button
            android:text="5"
            android:id="@+id/button-5"
            />
        <Button
            android:text="6"
            android:id="@+id/button-6"
            />
        <Button
            android:text="-"
            android:id="@+id/subtraction"
            />
        <Button
            android:text="7"
            android:id="@+id/button-7"
            />
        <Button
            android:text="8"
            android:id="@+id/button-8"
            />
        <Button
            android:text="9"
            android:id="@+id/button-9"
            />
        <Button
            android:text="="
            android:id="@+id/result"
            android:layout_rowSpan="2"
            android:layout_gravity="fill"
            />
        <Button
            android:text="0"
            android:id="@+id/button-0"
            />
        <Button
            android:layout_column="2"
            android:text="C"
            android:id="@+id/reset"
            />

    </GridLayout>

</android.support.constraint.ConstraintLayout>